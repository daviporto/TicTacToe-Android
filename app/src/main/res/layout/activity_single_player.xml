<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePlayer">

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="404dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="status"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:paddingLeft="8dp"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="213dp" />

    <ImageView
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:paddingLeft="8dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="213dp" />

    <ImageView
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:paddingLeft="8dp"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="213dp" />

    <ImageView
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:paddingLeft="8dp"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="330dp" />

    <ImageView
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:paddingLeft="8dp"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="330dp" />

    <ImageView
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:paddingLeft="8dp"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="330dp" />

    <ImageView
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:paddingLeft="8dp"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="446dp" />

    <ImageView
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:paddingLeft="8dp"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="446dp" />

    <ImageView
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pink_back_ground"
        tools:layout_editor_absoluteY="446dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:constraint_referenced_ids="btn_0,btn_1,btn_2,btn_3,btn_4,btn_5,btn_6,btn_7,btn_8"
        app:flow_horizontalGap="8dp"
        app:flow_maxElementsWrap="3"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_status"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/txt_currentPlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/currentPlayer"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

</androidx.constraintlayout.widget.ConstraintLayout>